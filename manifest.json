{
	"_version": "1.14.0",
	"sap.app": {
		"id": "ns.products_by_vendor_card",
		"type": "card",
		"title": "Products by Vendor Card",
		"subTitle": "Integration Card of Type List",
		"applicationVersion": {
			"version": "1.0.0"
		}
	},
	"sap.ui": {
		"technology": "UI5",
        "deviceTypes": {"desktop": true, "phone": true, "tablet": true},
		"icons": {
			"icon": "sap-icon://list"
		}
	},
	"sap.card": {
		"type": "List",
        "configuration": {
            "destinations": {
                "NORTHWIND": {
                    "name": "NORTHWIND",
                   "defaultUrl": "/V2/OData/OData.svc/"
                }
            },
            "parameters": {
                "title" : {
                    "value": "List Card with Top {{parameters.maxItems}} Products"
                },
                "subTitle": {
                    "value": "These are the top sellers this month"
                },
                "maxItems": {
                    "value": 5
                        }
                     }
        },
        "designtime": "dt/configuration",
        "header": {
			"title": "{{parameters.title}}",
			"subTitle": "{{parameters.subTitle}}",
			"icon": {
				"src": "sap-icon://desktop-mobile"
			},
			"status": {
				"text": "{{parameters.maxItems}} of 20"
			}
		},
		"content": {
			"data": {
                    "request": {
                "url": "{{destinations.NORTHWIND}}/V2/OData/OData.svc/Products",
                "withCredentials": true
                                            },
                                "path": "/d/results"
			},
			"item": {
				"title": "{Name}",
				"description": "{Description}",
				"highlight": "{id}"
			},
            "maxItems": "{{parameters.maxItems}}"
		}
	},
    "sap.platform.mobilecards": {
        "compatible": false
    }
}